using Microsoft.EntityFrameworkCore.Storage.ValueConversion;

namespace UtilityManagmentApi.Data.Converters;

/// <summary>
/// Converts DateOnly to DateTime for SQL Server storage
/// </summary>
public class DateOnlyConverter : ValueConverter<DateOnly, DateTime>
{
    public DateOnlyConverter() : base(
     dateOnly => dateOnly.ToDateTime(TimeOnly.MinValue),
        dateTime => DateOnly.FromDateTime(dateTime))
    {
    }
}

/// <summary>
/// Converts nullable DateOnly to nullable DateTime for SQL Server storage
/// </summary>
public class NullableDateOnlyConverter : ValueConverter<DateOnly?, DateTime?>
{
    public NullableDateOnlyConverter() : base(
        dateOnly => dateOnly.HasValue ? dateOnly.Value.ToDateTime(TimeOnly.MinValue) : null,
        dateTime => dateTime.HasValue ? DateOnly.FromDateTime(dateTime.Value) : null)
    {
    }
}
