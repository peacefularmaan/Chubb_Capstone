using System.ComponentModel.DataAnnotations;

namespace UtilityManagmentApi.Entities;

/// <summary>
/// System Settings Entity for storing application configuration
/// </summary>
public class SystemSetting
{
    [Key]
    public int Id { get; set; }

  [Required]
    [MaxLength(100)]
    public string SettingKey { get; set; } = string.Empty;

    [Required]
    [MaxLength(500)]
    public string SettingValue { get; set; } = string.Empty;

    [MaxLength(500)]
    public string? Description { get; set; }

    [Required]
    [MaxLength(50)]
    public string Category { get; set; } = string.Empty;

    public DateTime CreatedAt { get; set; } = DateTime.UtcNow;

    public DateTime? LastModified { get; set; }

    public int? ModifiedByUserId { get; set; }
}

/// <summary>
/// Audit Log Entity for tracking system changes
/// </summary>
public class AuditLog
{
    [Key]
    public int Id { get; set; }

    [Required]
    [MaxLength(50)]
    public string Action { get; set; } = string.Empty; // Create, Update, Delete, Login, etc.

    [Required]
    [MaxLength(100)]
    public string EntityType { get; set; } = string.Empty; // User, Consumer, Bill, etc.

    public int? EntityId { get; set; }

    public string? OldValues { get; set; } // JSON of old values

    public string? NewValues { get; set; } // JSON of new values

    [Required]
public int UserId { get; set; }

    [MaxLength(50)]
    public string? IpAddress { get; set; }

    [MaxLength(500)]
public string? UserAgent { get; set; }

    public DateTime Timestamp { get; set; } = DateTime.UtcNow;

    // Navigation
 public User? User { get; set; }
}
